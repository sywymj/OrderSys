@{
    Layout = null;
}

<input id="DemoDDL" class="mini-combobox" popupheight="150" width="100%"
       valuefield="ID" textfield="Title" data-options="{SelectedValue:''}"
       multiselect="false" valuefromselect="true" allowinput="true" required="true" shownullitem="false" emptytext="请选择..." />

<script>
    mini.parse();

    var DemoDDL = mini.get("DemoDDL");
    load_DemoDDL();

    function load_DemoDDL() {

        var url = '@Url.Action("GetDemoDDL", "Demo", new { area = "Admin" })';
        doGet(url, null, function (jdata) {
            if (jdata.Code == '200') {
                DemoDDL.setData(jdata.Data);
                DemoDDL.setValue(DemoDDL.SelectedValue);
            }
        })
    }

</script>
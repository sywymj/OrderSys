@using OrderSys.Model;

<!--委派工单的页面-->
<div id="appointorder_popup" class='weui-popup-container'>
    <div class="weui-popup-overlay"></div>
    <div class="weui-popup-modal">
        <header class='demos-header'>
            @Html.Partial("~/Views/Shared/_Back.cshtml", new BackViewModel() { Title = "委派工单", Popup = "#appointorder_popup" })
        </header>
        <article class="weui-article"></article>
    </div>
</div>

<script>
    openAppointPopup = function (orderID) {
        //打开popup
        var popup = '#appointorder_popup';
        var container = '#appointorder_popup > .weui-popup-modal > .weui-article';
        var url = '@Url.Action("AppointOrder", "Order")';
        var parms = { orderID: orderID };
        $.openMyPopup(popup);

        var article = new Article(container);
        doGetPartial1(article, url, parms);
    }
</script>
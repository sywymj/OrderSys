@model System.Data.DataRow
@using JSNet.Utilities;
@using JSNet.BaseSys;

@Html.Partial("~/Views/Shared/_Back.cshtml", "工单流程")
<div class="weui_cells weui_cells_form">
    <div class="weui_cell">
        <div class="weui_cell_hd"><label for="" class="weui_label">此天前完成</label></div>
        <div class="weui_cell_bd weui_cell_primary">
            @Model["BookingTime"]
        </div>
    </div>
    <div class="weui_cell">
        <div class="weui_cell_hd"><label class="weui_label">联系人</label></div>
        <div class="weui_cell_bd weui_cell_primary">
            @Model["Attn"];
        </div>
    </div>
    <div class="weui_cell">
        <div class="weui_cell_hd"><label class="weui_label">联系电话</label></div>
        <div class="weui_cell_bd weui_cell_primary">
            @Model["AttnTel"]
        </div>
    </div>

    <div class="weui_cell">
        <div class="weui_cell_hd"><label class="weui_label">发起人</label></div>
        <div class="weui_cell_bd weui_cell_primary">
            @Model["Attn"]
        </div>
    </div>
    <div class="weui_cell">
        <div class="weui_cell_hd"><label class="weui_label">联系电话</label></div>
        <div class="weui_cell_bd weui_cell_primary">
            @Model["Attn"]
        </div>
    </div>

    <div class="weui_cell">
        <div class="weui_cell_hd"><label class="weui_label">委派人</label></div>
        <div class="weui_cell_bd weui_cell_primary">
            @Model["AppointerName"]
        </div>
    </div>
    <div class="weui_cell">
        <div class="weui_cell_hd"><label class="weui_label">联系电话</label></div>
        <div class="weui_cell_bd weui_cell_primary">
            @Model["AppointerTel"]
        </div>
    </div>

    @foreach(System.Data.DataRow dr in ViewBag.Handlers.Rows){
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">委派人</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                @dr["Name"]@dr["IsLeader"]
            </div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_hd"><label class="weui_label">联系电话</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                @dr["Tel"]
            </div>
        </div>
    }

</div>

<div class="weui_cells_title">紧急程度</div>
<div class="weui_cells weui_cells_checkbox">
    <label class="weui_cell ">

        <div class="weui_cell_bd weui_cell_primary">
            <p>@EnumExtensions.ToDescription((OrderPriority)Model["Priority"])</p>
        </div>
    </label>

</div>

<div class="weui_cells_title">内容</div>
<div class="weui_cells weui_cells_form">
    <div class="weui_cell">
        @Model["Content"]
    </div>
</div>

<div class="weui_cells_title">备注</div>
<div class="weui_cells weui_cells_form">
    <div class="weui_cell">
        @Model["Remark"]
    </div>
</div>

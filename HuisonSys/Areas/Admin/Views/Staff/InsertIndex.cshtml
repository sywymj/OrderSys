
<form id="staff-form" method="post" style="">
    <input name="ID" class="mini-hidden" />
    <div style="padding-left:11px;padding-bottom:5px;">
        <table style="table-layout:fixed;">
            <tr>
                <td style="width:70px;">账号：</td>
                <td style="width:150px;">
                    <input name="UserName" class="mini-textbox" required="true" emptytext="请输入帐号" onvalidation="onExistUserNameValidation" />
                </td>
                <td style="width:70px;">密码：</td>
                <td style="width:150px;">
                    <input name="Password" class="mini-password" required="false" emptytext="请输入密码" />
                </td>
            </tr>
            <tr>
                <td style="width:70px;">分配角色：</td>
                <td style="width:150px;">
                    @Html.Partial("~/Areas/Admin/Views/Role/RoleDDL.cshtml")
                </td>
                <td></td>
                <td></td>
            </tr>
        </table>
    </div>
    <fieldset style="border:solid 1px #aaa;padding:3px;">
        <legend>基本信息</legend>
        <div style="padding:5px;">
            <table style="table-layout:fixed;">
                <tr>
                    <td style="width:70px;">姓名：</td>
                    <td style="width:150px;">
                        <input name="Staff.Name" class="mini-textbox" required="true" emptytext="请输入姓名" />
                    </td>
                    <td style="width:70px;">手机号码：</td>
                    <td style="width:150px;">
                        <input name="Staff.Tel" class="mini-textbox" required="true" emptytext="请输入手机号码" />
                    </td>
                </tr>
                <tr>
                    <td style="width:70px;">地址：</td>
                    <td style="width:150px;">
                        <input name="Staff.Addr" class="mini-textbox" required="false" emptytext="请输入地址" />
                    </td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td style="width:70px;">性别：</td>
                    <td>
                        <select name="Staff.Sex" class="mini-radiobuttonlist">
                            <option value="1">男</option>
                            <option value="2">女</option>
                        </select>
                    </td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>所属部门：</td>
                    <td>
                        @Html.Partial("~/Areas/Admin/Views/Staff/OrganizeDDL.cshtml")
                    </td>
                    <td></td>
                    <td></td>
                </tr>
            </table>
        </div>
    </fieldset>
    <div style="text-align:center;padding:10px;">
        <a class="mini-button" onclick="onOk" style="width:60px;margin-right:20px;">确定</a>
        <a class="mini-button" onclick="onCancel" style="width:60px;">取消</a>
    </div>
</form>

<script>
    mini.parse();
    var form = new mini.Form("staff-form");

    ////////////////////
    //标准方法接口定义
    function SetData(data) {
        if (data.action == "edit") {
            //跨页面传递的数据对象，克隆后才可以安全使用
            data = mini.clone(data);
            
            $.ajax({
                url: "../data/AjaxService.aspx?method=GetEmployee&id=" + data.id,
                cache: false,
                success: function (text) {
                    var o = mini.decode(text);
                    form.setData(o);
                    form.setChanged(false);

                    onDeptChanged();
                    mini.getbyName("position").setValue(o.position);
                }
            });
        }
    }

    /////////////////
    ///验证相关
    function onExistUserNameValidation(e) {
        var pass = false;
        if (e.isValid) {
            var url = '@Url.Action("VerifyUserName", "User", new { area = "Admin" })';
            var data = { userName: e.value };
            doGetSync(url, data, function (jdata) {
                if (jdata.Code == '200') {
                    debugger;
                    if (jdata.Data == true) {
                    } else {
                        e.errorText = "用户名已存在！";
                        e.isValid = false;
                    }
                }
            });
        }
    }

    /////////////////
    ///保存数据
    function SaveData() {
        var roleIDs = mini.get("RoleDDL").getValue();
        var o = form.getData();
        o.Staff.OrganizeID = mini.get("OrganizeDDL").getValue();

        //将空的属性转为null
        if (o.ID == "") {
            o.ID = null;
        }

        form.validate();
        if (form.isValid() == false) return;

        var json = mini.encode(o);
        $.ajax({
            url: '@Url.Action("Add", "User", new { area = "Admin"})',
            type: 'post',
            data: { viewModel: json, roleIDs: roleIDs },
            cache: false,
            success: function (text) {
                CloseWindow("save");
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert(jqXHR.responseText);
                CloseWindow();
            }
        });
    }

    /////////////////
    ///按钮方法
    function onOk(e) {
        SaveData();
    }



</script>


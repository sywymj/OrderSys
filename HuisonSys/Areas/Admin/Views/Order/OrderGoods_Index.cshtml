@{
    //【GetDT】
    ViewBag.Title = "物品管理";
    Layout = "~/Areas/Admin/Views/Shared/_InnerLayout.cshtml";
}
<script src="~/Areas/Admin/Script/ajaxfileupload.js"></script>
@Html.Partial("~/Areas/Admin/Views/Shared/_Header.cshtml", Request.Url.AbsolutePath)
<div class="mini-fit">
    <div id="OrderGoods-datagrid" class="mini-datagrid" idfield="OrderGoods_ID" ajaxoptions="{type : 'get'}" style="width:100%;height:100%" autoload="false"
         url="@Url.Action("GetOrderGoodsDTByPage", "Order", new { area = "Admin" })" datafield="Data.DT.JSNet" multiselect="true">
        <div property="columns">
            <div type="checkcolumn"></div>
            <div type="indexcolumn" headeralign="center">序号</div>
            <div field="OrderGoods_Name" width="180" headeralign="center" align="left" allowsort="true">物品名称</div>
            <div field="Organize_FullName" width="120" headeralign="center" align="center" allowsort="true">所属机构</div>
        </div>
    </div>
</div>

<div id="import-window" class="mini-window" title="批量导入" style="width: 410px; height: 150px;display:none;"
     showmodal="true" allowresize="true" allowdrag="true" showclosebutton="true">
    <table style="width: 100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td style="width:250px;">
                <input class="mini-htmlfile" name="Fdata" id="file1" style="width:250px;" />
            </td>
            <td style="width:60px;">
                <input type="button" value="上传" onclick="ajaxFileImport()" />
            </td>
            <td style="width:90px;">
                <a id="resultdownload" class="mini-button" enabled="false">结果下载</a>
            </td>
            <td></td>
        </tr>
        <tr><td>&nbsp;</td></tr>
        <tr><th style="padding-bottom: 5px; text-align: left;">模板下载</th></tr>
        <tr>
            <td>
                <a class="mini-button" onclick="window.location.href = '/Templet/导入物品模板.xls';">导入物品模板</a>
            </td>
            <td></td>
        </tr>
    </table>
</div>

<script>
    mini.parse()
    var OrderGoods_grid = mini.get("OrderGoods-datagrid");
    var importWindow = mini.get("import-window");

    OrderGoods_grid.load({
        pageIndex: 0,
        pageSize: 50,
        sortField: "OrderGoods_Name",//排序字段必需要，不然没法分页
        sortOrder: "DESC",//排序字段必需要，不然没法分页
    }, function (data) {
        ajaxTips(data.text);
    }, function (data) {
    })

    function add() {
        mini.open({
            url: "@Url.Action("InsertOrderGoodsIndex", "Order", new { area = "Admin" })",
            title: "新增物品", width: 400, height: 300,
            onload: function () {
                debugger;
                var iframe = this.getIFrameEl();
                var data = { action: "new" };
                iframe.contentWindow.SetData(data);
            },
            ondestroy: function (action) {
                OrderGoods_grid.reload();
            }
        });
    }

    function edit() {
        var row = OrderGoods_grid.getSelected();
        if (row) {
            mini.open({
                url: "@Url.Action("EditOrderGoodsIndex", "Order", new { area = "Admin" })",
                title: "编辑物品", width: 400, height: 300,
                onload: function () {
                    var iframe = this.getIFrameEl();
                    var data = { action: "edit", ID: row.OrderGoods_ID };
                    iframe.contentWindow.SetData(data);
                },
                ondestroy: function (action) {
                    OrderGoods_grid.reload();
                }
            });

        } else {
            alert("请选中一条记录");
        }
    }

    function del() {
        var rows = OrderGoods_grid.getSelecteds();
        if (rows.length > 0) {
            if (confirm("确定删除选中的记录？")) {
                var ids = [];
                for (var i = 0, l = rows.length; i < l; i++) {
                    var r = rows[i];
                    ids.push(r.OrderGoods_ID);
                }
                var id = ids.join(',');
                var url = '@Url.Action("DeleteOrderGoods", "Order", new { area = "Admin" })';
                var urlParms = { OrderGoodsIDs: id };
                doGet(url, urlParms, function (jdata) {
                    if (jdata.Code == '200') {
                        OrderGoods_grid.reload();
                    }
                });
            }
        } else {
            alert("请选中一条记录");
        }
    }

    //////////////////////////////////////////////
    //导入
    function importOrderGoods() {
        $('#resultdownload').removeAttr('onclick');
        mini.get("resultdownload").setEnabled(false);
        importWindow.show();
    }

    function ajaxFileImport() {

        OrderGoods_grid.loading("导入中，请稍后......");
        var inputFile = $("#file1 > input:file")[0];

        $.ajaxFileUpload({
            url: '@Url.Action("ImportOrderGoods", "Order", new { area = "Admin" })',                 //用于文件上传的服务器端请求地址
            fileElementId: inputFile,               //文件上传域的ID
            data: null,          //附加的额外参数
            dataType: 'text',                   //返回值类型 一般设置为json
            success: function (data, status)    //服务器成功响应处理函数
            {
                debugger;
                ajaxTips(data, function (jdata) {
                    if (jdata.Code == "200") {
                        $('#resultdownload').attr('href', jdata.Data);
                        mini.get("resultdownload").setEnabled(true);
                    }
                });
            },
            error: function (data, status, e)   //服务器响应失败处理函数
            {
                alert(e);
            },
            complete: function () {
                var jq = $("#file1 > input:file");
                jq.before(inputFile);
                jq.remove();
                OrderGoods_grid.reload();
                OrderGoods_grid.unmask();
            }
        });
    }
</script>

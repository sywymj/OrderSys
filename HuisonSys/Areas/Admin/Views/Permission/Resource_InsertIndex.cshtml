
<form id="resource-form" method="post" style="">
    <input name="ID" class="mini-hidden" />
    <div style="padding-left:11px;padding-bottom:5px;">
        <table style="table-layout:fixed;">
            <tr>
                <td style="width: 70px; text-align: right; ">标识码：</td>
                <td style="width:150px;" colspan="3">
                    @Html.Partial("~/Areas/Admin/Views/Permission/ResourceCode_DDL.cshtml", "onExistResourceCodeValidation")
                </td>
            </tr>
            <tr>
                <td style="width: 70px; text-align: right; ">父级元素：</td>
                <td style="width:150px;">
                    @Html.Partial("~/Areas/Admin/Views/Permission/Resource_TreeDDL.cshtml")
                </td>
                <td style="width: 70px; text-align: right; ">标题：</td>
                <td style="width:150px;">
                    <input name="FullName" class="mini-textbox" required="true" emptytext="请输入标题" />
                </td>
            </tr>
            <tr>
                <td style="width: 70px; text-align: right;">资源类型：</td>
                <td style="width:150px;">
                    @Html.Partial("~/Areas/Admin/Views/Permission/ResourceType_DDL.cshtml")
                </td>
                <td style="width: 70px; text-align: right;">资源表：</td>
                <td style="width:150px;">
                    <input name="Target" class="mini-textbox" required="false" emptytext="请输入资源表（可选）" />
                </td>
            </tr>
            @*<tr>
                <td style="width:70px;">分配资源明细：</td>
                <td style="width:150px;">
                    @Html.Partial("~/Areas/Admin/Views/Permission/PermissionItem_TreeDDL2.cshtml")
                </td>
                <td></td>
                <td></td>
            </tr>*@
            <tr>
                <td style="width: 70px; text-align: right;">组别：</td>
                <td style="width:150px;">
                    <input name="Groups" class="mini-textbox" required="false" emptytext="请输入组别（可选）" />
                </td>
                <td style="width: 70px; text-align: right;">排序：</td>
                <td style="width:150px;">
                    <input name="SortCode" class="mini-textbox" required="true" value="100" emptytext="请输入排序号" />
                </td>
            </tr>
            <tr>
                <td style="width: 70px; text-align: right;">URL地址：</td>
                <td style="width:150px;">
                    <input name="NavigateUrl" class="mini-textbox" required="false" emptytext="请输入URL地址（可选）" style="width:100%" />
                </td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td style="width: 70px; text-align: right;">是否可见：</td>
                <td>
                    <select name="IsVisible" class="mini-radiobuttonlist">
                        <option value="1">是</option>
                        <option value="0">否</option>
                    </select>
                </td>
                <td style="width: 70px; text-align: right;">是否可用：</td>
                <td>
                    <select name="IsEnable" class="mini-radiobuttonlist">
                        <option value="1">是</option>
                        <option value="0">否</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td style="width: 70px; text-align: right;">是否公共：</td>
                <td>
                    <select name="IsPublic" class="mini-radiobuttonlist" value="0">
                        <option value="1">是</option>
                        <option value="0">否</option>
                    </select>
                </td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td style="width: 70px; text-align: right;">备注：</td>
                <td style="" colspan="3">
                    <input name="Description" class="mini-textarea" required="false" width="100%" emptytext="请输入备注内容（可选）" />
                </td>
            </tr>
        </table>
    </div>
    <div style="text-align:center;padding:10px;">
        <a class="mini-button" onclick="onOk" style="width:60px;margin-right:20px;">确定</a>
        <a class="mini-button" onclick="onCancel" style="width:60px;">取消</a>
    </div>
</form>

<script>
    mini.parse();
    var form = new mini.Form("resource-form");

    ////////////////////
    //标准方法接口定义
    function SetData(data) {
        if (data.action == "edit") {
            //跨页面传递的数据对象，克隆后才可以安全使用
            data = mini.clone(data);
            var url = '@Url.Action("GetSingleResource", "Permission", new { area = "Admin" })';
            var parms = { resourceID: data.ID };

            doGet(url, parms, function (jdata) {
                var o = jdata.Data
                debugger;
                form.setData(o);
                form.setChanged(false);

                mini.get("ResourceDDL").setValue(o.ParentID);
                mini.get("ResourceDDL").SelectedValue = o.ParentID;//这种写法是防止ddl的数据加载慢了，不能用setvalue设置选中值。
                mini.get("ResourceTypeDDL").setValue(o.ResourceType);
                mini.get("ResourceTypeDDL").SelectedValue = o.ResourceType;//这种写法是防止ddl的数据加载慢了，不能用setvalue设置选中值。
                mini.get("ResourceCodeDDL").setValue(o.Code);
                mini.get("ResourceCodeDDL").SelectedValue = o.Code;//这种写法是防止ddl的数据加载慢了，不能用setvalue设置选中值。
            })
        }
    }

    /////////////////
    ///验证相关
    function onExistResourceCodeValidation(e) {
        var pass = false;
        if (e.isValid) {
            var resourceID = mini.getbyName("ID").getValue();
            var url = '@Url.Action("VerifyResourceCode", "Permission", new { area = "Admin" })';
            var data = { resourceCode: e.value, resourceID: resourceID };
            doGetSync(url, data, function (jdata) {
                if (jdata.Code == '200') {
                    debugger;
                    if (jdata.Data == true) {
                    } else {
                        e.errorText = "资源编号已存在！";
                        e.isValid = false;
                    }
                }
            });
        }
    }

    /////////////////
    ///保存数据
    function SaveData() {

        var o = form.getData();
        o.ParentID = mini.get("ResourceDDL").getValue();
        o.Code = mini.get("ResourceCodeDDL").getValue();
        o.ResourceType = mini.get("ResourceTypeDDL").getValue();
        debugger;
        //将空的属性转为null
        if (o.ID == "") {
            o.ID = null;
        }

        form.validate();
        if (form.isValid() == false) return;

        var url;
        if (o.ID == null) {
            url = '@Url.Action("AddResource", "Permission", new { area = "Admin"})';
        } else {
            url = '@Url.Action("EditResource", "Permission", new { area = "Admin" })';
        }
        var json = mini.encode(o);
        var data = { viewModel: json };
        doPost(url, data, function (jdata) {
            CloseWindow("save");
        })
    }

    /////////////////
    ///按钮方法
    function onOk(e) {
        SaveData();
    }
    function onCancel(e) {
        CloseWindow("cancel");
    }


    function CloseWindow(action) {
        if (action == "close" && form.isChanged()) {
            if (confirm("数据被修改了，是否先保存？")) {
                return false;
            }
        }
        if (window.CloseOwnerWindow) return window.CloseOwnerWindow(action);
        else window.close();
    }


</script>


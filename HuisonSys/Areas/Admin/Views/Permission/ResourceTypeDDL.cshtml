@{
    Layout = null;
}

<input id="ResourceTypeDDL" class="mini-combobox" popupheight="150"
       valuefield="ID" textfield="Title"
       multiselect="false" valuefromselect="true" allowinput="true" required="true" shownullitem="false" emptytext="请选择..." />

<script>
    mini.parse();

    var ResourceTypeDDL = mini.get("ResourceTypeDDL");
    load_ResourceTypeDDL();

    function load_ResourceTypeDDL() {

        var url = '@Url.Action("GetResourceTypeDDL", "Permission", new { area = "Admin" })';
        doGet(url, null, function (jdata) {
            if (jdata.Code == '200') {
                debugger;
                ResourceTypeDDL.setData(jdata.Data);
            }
        })
    }

</script>
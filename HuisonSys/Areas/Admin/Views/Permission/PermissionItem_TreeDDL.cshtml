@{
    Layout = null;
}

<input id="PermissionItemDDL" class="mini-treeselect" popupheight="150"
       valuefield="ID" parentfield="ParentID" textfield="Title"
       valuefromselect="true" allowinput="true" required="true" showtreeicon="false" expandonload="0" shownullitem="false" emptytext="请选择..." />

<script>
    mini.parse();

    var PermissionItemDDL = mini.get("PermissionItemDDL");
    load_PermissionItemDDL();

    function load_PermissionItemDDL() {

        var url = '@Url.Action("GetPermissionItemTreeDDL", "Permission", new { area = "Admin" })';
        doGet(url, null, function (jdata) {
            if (jdata.Code == '200') {
                debugger;
                PermissionItemDDL.loadList(jdata.Data);
            }
        })
    }

</script>


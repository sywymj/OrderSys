@{
    Layout = null;
}

<input id="ResourceDDL" class="mini-treeselect" popupheight="150" width="100%"
       valuefield="ID" parentfield="ParentID" textfield="Title" data-options="{SelectedValue:''}"
       valuefromselect="true" allowinput="true" required="true" showtreeicon="false" expandonload="0" shownullitem="false" emptytext="请选择..." /> 

<script>
    mini.parse();

    var ResourceDDL = mini.get("ResourceDDL");
    load_ResourceDDL();

    function load_ResourceDDL() {

        var url = '@Url.Action("GetResourceTreeDDL", "Permission", new { area = "Admin" })';
        doGet(url, null, function (jdata) {
            if (jdata.Code == '200') {
                ResourceDDL.loadList(jdata.Data);
                ResourceDDL.setValue(ResourceDDL.SelectedValue);
            }
        })
    }

</script>


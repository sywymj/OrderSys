@{
    ViewBag.Title = "资源明细管理";
    Layout = "~/Areas/Admin/Views/Shared/_InnerLayout.cshtml";
}

@Html.Partial("~/Areas/Admin/Views/Shared/_Header.cshtml", Request.Url.AbsolutePath)
<div class="mini-fit">
    <div id="permissionItem-datagrid" class="mini-treegrid" ajaxoptions="{type : 'get'}" style="width:100%;height:100%"
         showtreeicon="false" resultastree="false" expandonload="1"
         treecolumn="treename" idfield="PermissionItem_ID" parentfield="PermissionItem_ParentID" datafield="Data.DT.JSNet">
        <div property="columns">
            <div name="treename" field="PermissionItem_FullName" width="180" headeralign="center" align="left" allowsort="true">标题</div>
            <div field="PermissionItem_Code" width="180" headeralign="center" align="left" allowsort="true">标识码</div>
            <div field="PermissionItem_SysCategory" width="120" headeralign="center" align="center" allowsort="true">系统类型</div>
            <div field="PermissionItem_Controller" width="120" headeralign="center" align="center" allowsort="true">Controller</div>
            <div field="PermissionItem_ActionName" width="120" headeralign="center" align="center" allowsort="true">ActionName</div>
            <div field="PermissionItem_ActionParameter" width="120" headeralign="center" align="center" allowsort="true">ActionParameter</div>
            <div field="PermissionItem_Description" width="120" headeralign="center" align="center" allowsort="true">明细描述</div>
            <div field="PermissionItem_SortCode" width="120" headeralign="center" align="center" allowsort="true">排序</div>
        </div>
    </div>
</div>

<script>
    mini.parse()
    var permissionItem_grid = mini.get("permissionItem-datagrid");

    permissionItem_grid.setUrl("@Url.Action("GetPermissionItemList", "Permission", new { area = "Admin" })");
    permissionItem_grid.load({
    }, function (data) {
        ajaxTips(data.text);
    }, function (data) {
    })

    function add() {
        mini.open({
            url: "@Url.Action("InsertPermissionItemIndex", "Permission", new { area = "Admin" })",
            title: "新增资源明细", width: 600, height: 400,
            onload: function () {
                debugger;
                var iframe = this.getIFrameEl();
                var data = { action: "new" };
                iframe.contentWindow.SetData(data);
            },
            ondestroy: function (action) {
                permissionItem_grid.reload();
            }
        });
    }

    function edit() {
        var row = permissionItem_grid.getSelected();
        if (row) {
            mini.open({
                url: "@Url.Action("EditPermissionItemIndex", "Permission", new { area = "Admin" })",
                title: "编辑资源明细", width: 600, height: 400,
                onload: function () {
                    var iframe = this.getIFrameEl();
                    var data = { action: "edit", ID: row.PermissionItem_ID };
                    iframe.contentWindow.SetData(data);
                },
                ondestroy: function (action) {
                    permissionItem_grid.reload();
                }
            });

        } else {
            alert("请选中一条记录");
        }

    }

</script>

@{
    Layout = null;
}

<input id="ScopeDDL" class="mini-treeselect" popupheight="150"
       valuefield="ID" parentfield="ParentID" textfield="Title"
       valuefromselect="true" allowinput="true" required="true" showtreeicon="false" expandonload="0" shownullitem="false" multiselect="true" showfoldercheckbox="true" emptytext="请选择..." />

<script>
    mini.parse();

    var ScopeDDL = mini.get("ScopeDDL");
    load_ScopeDDL();

    function load_ScopeDDL() {

        var url = '@Url.Action("GetScopeTreeDDL", "Permission", new { area = "Admin" })';
        doGet(url, null, function (jdata) {
            if (jdata.Code == '200') {
                debugger;
                ScopeDDL.loadList(jdata.Data);
            }
        })
    }

</script>


@{
    Layout = null;
}

<input id="RoleDDL" class="mini-combobox" popupheight="150"
       valuefield="ID" textfield="Title"
       multiselect="true" valuefromselect="true" allowinput="true" required="true" shownullitem="false" emptytext="请选择..." />

<script>
    mini.parse();

    var roleDDL = mini.get("RoleDDL");
    load_roleDDL();

    function load_roleDDL() {

        var url = '@Url.Action("GetRoleDDL", "Role", new { area = "Admin" })';
        doGet(url, null, function (jdata) {
            if (jdata.Code == '200') {
                debugger;
                roleDDL.setData(jdata.Data);
            }
        })
    }

</script>


@{
    Layout = null;
}

<input id="OrganizeCategoryDDL" class="mini-combobox" popupheight="150"
       valuefield="ID" textfield="Title"
       multiselect="false" valuefromselect="true" allowinput="true" required="true" shownullitem="false" emptytext="请选择..." />

<script>
    mini.parse();

    var OrganizeCategoryDDL = mini.get("OrganizeCategoryDDL");
    load_OrganizeCategoryDDL();

    function load_OrganizeCategoryDDL() {

        var url = '@Url.Action("GetOrganizeCategoryDDL", "Organize", new { area = "Admin" })';
        doGet(url, null, function (jdata) {
            if (jdata.Code == '200') {
                debugger;
                OrganizeCategoryDDL.setData(jdata.Data);
            }
        })
    }

</script>
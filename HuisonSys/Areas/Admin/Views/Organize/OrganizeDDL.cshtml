@{
    Layout = null;
}

<input id="OrganizeDDL" class="mini-treeselect" popupheight="150"
       valuefield="ID" parentfield="ParentID" textfield="Title"
       valuefromselect="true" allowinput="true" required="true" showtreeicon="false" expandonload="0" shownullitem="false" emptytext="请选择..." /> 

<script>
    mini.parse();

    var organizeDDL = mini.get("OrganizeDDL");
    load_organizeDDL();

    function load_organizeDDL() {

        var url = '@Url.Action("GetOrganizeDDL", "Organize", new { area = "Admin" })';
        doGet(url, null, function (jdata) {
            if (jdata.Code == '200') {
                debugger;
                organizeDDL.loadList(jdata.Data);
            }
        })
    }

</script>


@model System.Data.DataTable
@using JSNet.Utilities;
@using JSNet.BaseSys;
@using JSNet.Service;

@foreach (System.Data.DataRow dr in Model.Rows)
{
    <div class="list_sym" id="appointingorder_@dr["ID"]">
        <div class="list_sym_cc circle rotate90deg">@EnumExtensions.ToDescription((OrderStatus)dr["Status"])</div>
        <div class="list_sym_l">
            <div class="list_sym_l_in">
                <div class="list_sym_l_in_t">报障单号：@dr["OrderNo"]</div>
                <div class="list_sym_l_in_m">
                    <ul>
                        <li>紧急程度：<font color="@EnumExtensions.ToColorStyle((OrderPriority)dr["Priority"])" size="2">@EnumExtensions.ToDescription((OrderPriority)dr["Priority"])</font></li>
                        <div class="clear"></div>
                        @*<li>截止日期：@Convert.ToDateTime(dr["BookingTime"]).ToString(BaseSystemInfo.DateFormat)</li>
                        <div class="clear"></div>*@
                        <li>发起时间：@Convert.ToDateTime(dr["OperateTime"]).ToString(BaseSystemInfo.DateTimeFormat)</li>
                        <div class="clear"></div>
                        <li>发起人：@dr["StarterName"]</li>
                        <li>电话：<a href="tel:@dr["StarterTel"]">@dr["StarterTel"]</a></li>
                        <div class="clear"></div>
                    </ul>
                </div>
                <div class="list_sym_l_in_b">
                    @dr["Content"]
                </div>
            </div>
        </div>
        <div class="list_sym_r">
            @{if (new PermissionService().IsButtonAuthorizedByRole("OrderSys_VX.MyAppointIndex.Appoint"))
              {
                  <a class="orders" href="@Url.Action("AppointOrder", "Order", new {area = "Weixin",OrderID = dr["ID"] })">委派</a>
              } 
            }
            @{if (new PermissionService().IsButtonAuthorizedByRole("OrderSys_VX.PublicButton.OrderFlows"))
              {
                  <a class="details" href="@Url.Action("OrderFlows", "Order", new {  area = "Weixin" ,OrderID = dr["ID"] })">详情</a>
              }
            }
        </div>
        <div class="clear"></div>
    </div>
}




